<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/quizQuestion"
        android:layout_width="300dp"
        android:layout_height="73dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <ProgressBar
        android:id="@+id/quizProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:max="100"
        app:layout_constraintEnd_toEndOf="@+id/quizQuestion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quizQuestion"
        app:layout_constraintTop_toBottomOf="@+id/quizProgressBarStatus" />

    <TextView
        android:id="@+id/quizProgressBarStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/quizProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/quizQuestion" />

    <TextView
        android:id="@+id/quizVarOne"
        android:layout_width="136dp"
        android:layout_height="145dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/back_for_text"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@+id/quizProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/quizProgressBar" />

    <TextView
        android:id="@+id/quizVarTwo"
        android:layout_width="136dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/back_for_text"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/quizVarOne"
        app:layout_constraintEnd_toEndOf="@+id/quizProgressBar"
        app:layout_constraintTop_toTopOf="@+id/quizVarOne"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/quizVarThree"
        android:layout_width="0dp"
        android:layout_height="145dp"
        android:background="@drawable/back_for_text"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/quizVarOne"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quizVarOne"
        app:layout_constraintTop_toBottomOf="@+id/quizVarOne"
        app:layout_constraintVertical_bias="0.392" />

    <TextView
        android:id="@+id/quizVarFour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_for_text"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="TextView"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/quizVarThree"
        app:layout_constraintEnd_toEndOf="@+id/quizVarTwo"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="@+id/quizVarTwo"
        app:layout_constraintTop_toTopOf="@+id/quizVarThree"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>